<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.topog.blinkme.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bSms"
            android:layout_alignBottom="@+id/bSms"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Sms"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tCalls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tSms"
            android:layout_marginTop="28dp"
            android:text="Calls"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tMessenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tCalls"
            android:layout_marginTop="28dp"
            android:text="Messenger"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tWhatsApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tMessenger"
            android:layout_marginTop="28dp"
            android:text="WhatsApp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tWhatsApp"
            android:layout_marginTop="28dp"
            android:text="Instagram"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bSms"
            android:onClick="Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Set color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bCalls"
            android:onClick="Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tCalls"
            android:layout_alignBottom="@+id/tCalls"
            android:layout_alignLeft="@+id/bSms"
            android:layout_alignStart="@+id/bSms"
            android:text="Set color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bMessenger"
            android:onClick="Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tMessenger"
            android:layout_alignBottom="@+id/tMessenger"
            android:layout_alignLeft="@+id/bCalls"
            android:layout_alignStart="@+id/bCalls"
            android:text="Set color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bWhatsApps"
            android:onClick="Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tWhatsApp"
            android:layout_alignBottom="@+id/tWhatsApp"
            android:layout_alignLeft="@+id/bMessenger"
            android:layout_alignStart="@+id/bMessenger"
            android:text="Set color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bInstagram"
            android:onClick="Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tInstagram"
            android:layout_alignBottom="@+id/tInstagram"
            android:layout_alignLeft="@+id/bWhatsApps"
            android:layout_alignStart="@+id/bWhatsApps"
            android:text="Set color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bSave"
            android:onClick="Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Ip"
            android:layout_alignBottom="@+id/Ip"
            android:layout_alignLeft="@+id/bInstagram"
            android:layout_alignStart="@+id/bInstagram"
            android:text="Save"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/Ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="IP ADDRESS"
            android:inputType="textPersonName"
             />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
